<%- include ('../inc/header') %>
<div class="modal fade" id="addColorModal" tabindex="-1" aria-labelledby="addColorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addColorModalLabel">Thêm Màu</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
<form method="post">
    <label for="colorCode">Mã Màu:</label><br>
    <select id="colorCode" name="colorCode">
        <% colorCodes.forEach(function(colorCode) { %>
            <option value="<%= colorCode._id %>"><%= colorCode.colorCode %></option>
        <% }); %>
    </select><br>
    <label for="image">Hình Ảnh:</label><br>
    <input type="text" id="image" name="image"><br>
    <label for="quantity">Số Lượng:</label><br>
    <input type="number" id="quantity" name="quantity"><br>
    <input type="submit" value="Thêm">
</form>
</div>
</div>
</div>
</div>
<%- include ('../inc/footer') %>
